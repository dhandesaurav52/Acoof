
{
  "rules": {
    // Admin Override: Grant full read/write access to the entire database if the user is an admin.
    // This rule is evaluated first. If it's true, access is granted.
    ".read": "auth != null && auth.token.email === 'admin@example.com'",
    ".write": "auth != null && auth.token.email === 'admin@example.com'",

    "products": {
      // For non-admins (since admin access is already granted above), allow public read access.
      ".read": true
    },
    "users": {
      // For non-admins, a user can only read/write their own data.
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid"
      }
    },
    "orders": {
      ".indexOn": "userId",
      // For non-admins, a user can only access their own orders.
      "$orderId": {
        ".read": "auth != null && data.child('userId').val() === auth.uid",
        ".write": "auth != null && ((!data.exists() && newData.child('userId').val() === auth.uid) || (data.exists() && data.child('userId').val() === auth.uid))"
      }
    }
  }
}
