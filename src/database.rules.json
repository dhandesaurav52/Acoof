
{
  "rules": {
    // ADMIN RULE: Admin has full read/write access to the entire database.
    // This rule takes precedence over all other rules for the admin user.
    ".read": "auth != null && auth.token.email === 'admin@example.com'",
    ".write": "auth != null && auth.token.email === 'admin@example.com'",
    
    "products": {
      // PUBLIC RULE: Any user (authenticated or not) can read the product list.
      // The admin's write access is inherited from the root rule.
      ".read": "true"
    },
    "users": {
      "$uid": {
        // USER RULE: An authenticated user can read and write to their own user profile node.
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid"
      }
    },
    "orders": {
      ".indexOn": "userId",
      "$orderId": {
        // USER RULE: An authenticated user can read their own order.
        ".read": "auth != null && data.child('userId').val() === auth.uid",
        // USER RULE: An authenticated user can create a new order, or update their own existing order.
        ".write": "auth != null && ((!data.exists() && newData.child('userId').val() === auth.uid) || (data.exists() && data.child('userId').val() === auth.uid))"
      }
    }
  }
}
