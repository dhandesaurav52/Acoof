
{
  "rules": {
    "products": {
      ".read": true,
      ".write": "auth != null && auth.token.email === 'admin@example.com'"
    },
    "users": {
      ".indexOn": ["email"],
      ".read": "auth != null && auth.token.email === 'admin@example.com'",
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid",
        "orders": {
           // Allow a user to add order references under their own profile
          ".write": "auth != null && auth.uid === $uid"
        }
      }
    },
    "orders": {
      ".indexOn": "userId",
      // Admin can read all orders
      ".read": "auth != null && auth.token.email === 'admin@example.com'",
      "$orderId": {
        // User can read their own order
        ".read": "auth != null && (data.child('userId').val() === auth.uid || auth.token.email === 'admin@example.com')",
        // Write rules for a specific order
        ".write": "auth != null && (auth.token.email === 'admin@example.com' || (newData.child('userId').val() === auth.uid && !data.exists()) || (data.child('userId').val() === auth.uid && (newData.child('status').val() === 'Cancelled' || newData.child('cancellationReason').val() != null)))"
      }
    },
    "notifications": {
      ".read": "auth != null && auth.token.email === 'admin@example.com'",
      ".write": "auth != null"
    }
  }
}
