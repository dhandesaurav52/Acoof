rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Default deny all
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // Allow public read access to product images
    match /products/{productId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == 'admin@example.com';
    }

    // Allow users to read and write their own profile picture
    // and allow admin to read/write any profile picture
    match /profile-pictures/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && (request.auth.uid == userId || request.auth.token.email == 'admin@example.com');
    }
  }
}
